@model IEnumerable<Projet1.Models.Categorie>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-white">
                 @Html.DisplayNameFor(model => model.ProfilePicture)
            </th>
            <th>
                 
                 <a onclick="showInPopup('@Url.Action("AddOrEdit","Categories",null,Context.Request.Scheme)','New Categorie')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Categorie</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                                <img src="@FileLocation.RetriveFileFromFolder@item.ProfilePicture" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
                            </a>
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Categories",new {id=item.Id},Context.Request.Scheme)','Update Categorie')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                <a asp-action="Details">Details</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                        <input type="hidden" asp-for="@item.Id" />
                        <input type="hidden" asp-for="@item.ProfilePicture" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>

