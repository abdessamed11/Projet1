@model IEnumerable<Projet1.Models.Formation>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.ProfilePicture)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Formations",null,Context.Request.Scheme)','New Formation')" class="btn btn-info" >New formation</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                                <img src="@FileLocation.RetriveFileFromFolder@item.ProfilePicture" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
                            </a>
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Formations",new {id=@item.Id},Context.Request.Scheme)','Edit Formation')" class="btn btn-info" >Edit</a>
                <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                    <input hidden asp-for="@item.Id">
                    <input class="btn btn-danger" type="submit" value="Delete">
                </form>

                 
            </td>
        </tr>
}
    </tbody>
</table>
